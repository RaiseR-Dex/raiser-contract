{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "moduleResolution": "node",
    "importHelpers": true,
    "declaration": true,
    "sourceMap": true,
    "strict": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "outDir": "dist",
    "resolveJsonModule": true
  },
  "include": [
    "./typechain",
    "./scripts",
    "./tests",
    "index.ts"
  ],
  "exclude": [
    "dist"
  ],
  "files": ["./hardhat.config.ts"]
}
